#!/bin/bash

checkInput() {
    resOld=$1
    resPos=$2
    resNew=$3
    resStr="$4"

	if [[ "$resOld" != [ATGC] ]] 
    then
        echo 'error: First argument must be: A,T,G,C'
    fi

    re='^[0-9]+$'
    if ! [[ $resPos =~ $re ]] ; then
    echo "error: Second argument must be an integer" >&2; exit 1
    fi

	if [[ "$resNew" != [ATGC] ]] 
    then
        echo 'error: Third argument must be: A,T,G,C'
    fi

	if [[ "$resOld" != 'D1' ]] || [[ "$resOld" != 'D1' ]]
    then
        echo 'error: First argument must be: A,T,G,C'
    fi

}
